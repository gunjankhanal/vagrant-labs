#VAGRANT TO PROVISION AWS INSTANCE
Install the AWS plugin: vagrant plugin install vagrant-aws
vagrant plugin update

Vagrant.configure("2") do |config|
config.vm.box = "dummy"
config.vm.provider :aws do |aws, override|
# AWS credentials
aws.access_key_id = "YOUR_ACCESS_KEY"
aws.secret_access_key = "YOUR_SECRET_KEY"
# AWS instance configuration
aws.region = "us-east-1"
aws.instance_type = "t2.micro"
aws.ami = "ami-0c55b159cbfafe1f0" # Amazon Linux 2 AMI (change as needed)
# SSH configuration
aws.keypair_name = "your-keypair-name"
override.ssh.private_key_path = "~/.ssh/your-private-key.pem"
override.ssh.username = "ec2-user" # "ubuntu" for Ubuntu AMIs
# Security groups
aws.security_groups = ["default"]
# Tags
aws.tags = {
'Name' => 'Vagrant AWS Instance',
'Environment' => 'Development'
}
end# Provisioning (example with shell script)
config.vm.provision "shell", inline: <<-SHELL
sudo yum update -y
sudo yum install -y nginx
sudo systemctl start nginx
sudo systemctl enable nginx
SHELL
end

++++++++++++++++++++++++++++++++++++++++++++++++++++
vagrant up --provider=aws
